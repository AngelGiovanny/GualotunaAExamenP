<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GualotunaAExamenP.Login">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
            <Frame BackgroundColor="DarkGreen" Padding="24" CornerRadius="0">
                <Label Text="REGISTROS DE ESTUDIANTES PARA CURSO ACADEMICO" HorizontalTextAlignment="Center" TextColor="LightCyan" FontSize="12"/>
            </Frame>

            <Entry x:Name="txtusuario" Placeholder="Ingrese su usuario"/>
            <Entry x:Name="txtlog" Placeholder="Ingrese su contraseña" IsPassword="True"/>

            <Button x:Name="btnIngresar" Text="Ingresar" Clicked="btnIngresar_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>